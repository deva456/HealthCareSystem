@using HealthcareApp.Models.DataModels
@model HealthcareApp.Models.DataModels.MedicalReport

@{
    ViewData["Title"] = "Create";
}

<h1>Create medical report</h1>

@await Html.PartialAsync("PatientAdmissionPartial", (PatientAdmission) ViewBag.PatientAdmission)

<h4 class="mt-3">Medical Report</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PatientAdmissionId" type="hidden" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control mt-1"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger btn-spacing">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
