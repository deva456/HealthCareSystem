@using HealthcareApp.Models.DataModels
@model HealthcareApp.Models.DataModels.MedicalReport

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@await Html.PartialAsync("PatientAdmissionPartial", (PatientAdmission) ViewBag.PatientAdmission)
<br />
<br />
<h4>Medical Report</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="PatientAdmissionId" type="hidden" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control mt-1"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger btn-spacing">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
